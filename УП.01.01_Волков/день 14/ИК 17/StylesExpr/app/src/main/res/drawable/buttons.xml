<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip"></corners>
            <stroke android:width="4dip" android:color="#00B8D4"></stroke>
            <gradient
                android:angle="0"
                android:startColor="#226bc9"
                android:endColor="#35dbaf"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip"></corners>
            <stroke android:width="4dip" android:color="#00B8D4"></stroke>
            <gradient
                android:angle="10"
                android:startColor="#226bc9"
                android:endColor="#35dbaf"/>
        </shape>
    </item>
    <item android:shape="rectangle">
        <shape android:shape="rectangle">
            <corners android:radius="20dip"></corners>
            <stroke android:width="4dip" android:color="#00B8D4"></stroke>
            <gradient
                android:angle="180"
                android:startColor="#226bc9"
                android:endColor="#35dbaf"/>
        </shape>
    </item>
</selector>